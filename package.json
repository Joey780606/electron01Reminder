{
  "name": "electron-reminder",
  "version": "1.0.0",
  "description": "An Electron reminder application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "reminder"
  ],
  "author": "Joey Yang <joeyyang@example.com>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.joeyyang.reminder",
    "productName": "Reminder",
    "copyright": "Copyright Â© 2025",
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.code-workspace",
      "!LICENSE.md",
      "!package-lock.json",
      "!src/",
      "!.git/",
      "!.vscode/"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.png"
    },    
    "linux": {
      "target": ["deb", "AppImage"], 
      "category": "Development;Utility", 
      "description": "Event reminder app",
      "icon": "icon.png" 
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
